#loginModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "loginModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5#loginModalLabel.modal-title Sign In
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} ×
      .modal-body
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .wrap-input100
            = f.email_field :email, autofocus: true, autocomplete: "off", class: "input100", placeholder: "Input Email"
          %br/
          .wrap-input100
            = f.password_field :password, autocomplete: "current-password", class: "input100", placeholder: "Input Password"
          %br/
          - if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me
              = f.label :remember_me
          .modal-footer
            = f.submit "Log in", class: "login100-form-btn"
        .flex-col-c.p-t-170.p-b-40
          Don’t have an account?
          -#%a.txt3{"data-dismiss" => "modal", "data-toggle" => "modal", "data-target" => "#signupModal"} Sign Up
          = button_tag 'Sign In', { class: "txt3", type: 'button', remote: true, data: { dismiss: 'modal', toggle: "modal", target: '#signupModal' } }
          -# = link_to 'Sign Up', new_user_registration_path, class: "txt3"