#signupModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "signupModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5#loginModalLabel.modal-title Sign Up
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          .wrap-input100
            = f.email_field :email, autofocus: true, autocomplete: "off", class: "input100", placeholder: "Input Email"
          %br/
          .wrap-input100
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "current-password", class: "input100", placeholder: "Input Password"
          %br/
          .wrap-input100
            = f.password_field :password_confirmation, autocomplete: "new-password", class: "input100", placeholder: "Repeat Password"
          .modal-footer
            = f.submit "Sign Up", class: "login100-form-btn"