#projectModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "projectModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:role => "document"}
    .modal-content
      .modal-header
        %h5#exampleModalLabel.modal-title Project title
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        = form_for Project.new, id: "new-project", remote: true do |form|
          = form.label :name
          = form.text_field :name
          .modal-footer
            = form.submit 'enter', class: "project-name-btn"
            -#%button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Close
