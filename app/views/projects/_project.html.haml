%li
  = project.name
  = button_to 'X', project, method: :delete, remote: true
  #tasks
    = form_with(model: Task.new, id: "new-task") do |f|
      = f.text_field :description
      = f.hidden_field :project_id, value: project.id
      = f.submit :submit
    - project.tasks.each do |task|
      %ul
        %li= task.description
        %li= task.done